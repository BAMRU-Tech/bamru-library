<% var style = locals.style === 'homepage' ? 'main-item main-item--bottom' : 'g-footer' %>
<div class="<%= style %>">
  <% const {edit, move, create, viewFolder, newDocLink} = config.footerButtons %>
  <% if (locals.pager) { %>
    <% pager.forEach((page, i) => { %>
  <a class="button btn-footer" href="<%- page.link %>"><%= i + 1 %></a>
    <% }) %>
  <% } %>
  <% if (locals.editLink) { %>
  <a class="button btn-footer" href="<%- editLink %>" id="edit-button" target="_blank"><%= edit %></a>
  <a class="button btn-footer move-file-button" href="/move-file?id=<%- id %>"><%= move %></a>
  <% } %>
  <% if (locals.parentId) { %>
  <a class="button btn-footer" href=<%- newDocLink(parentId)%> target="_blank"><%= create %></a>
  <a class="button btn-footer" href="https://drive.google.com/drive/u/0/folders/<%- parentId %>" target="_blank"><%= viewFolder %></a>
  <% } %>

  <p class="help-text"><%- config.helpText %></p>
</div>
<script>
  // Google Analytics tracking
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
  ga('create', '***REMOVED***', 'auto');

  <% if(locals.pageType) { %>
    ga('set', 'contentGroup1', <%- JSON.stringify(locals.pageType) %>);
  <% } %>

  <% if(locals.topLevelFolder) { %>
    ga('set', 'contentGroup2', <%- JSON.stringify(locals.topLevelFolder) %>);
  <% } %>

  // get the userinfo then fire a pageview (can't cache in the page)
  $.ajax({
    method: 'GET',
    url: '/whoami.json'
  }).always(function (data) {
    var userId = (data || {}).analyticsUserId;
    if (userId) {
      ga('set', 'userId', userId)

      if(window.location.pathname === '/') {
        $(document).ready(function() {
          personalizeHomepage(userId)
        })
      }
    }

    ga('send', 'pageview');
    renderUserInfo(data);
  });

  function renderUserInfo(data) {
    var username = data.email || config.defaultEmail;
    $('.user-fullname').text(username);

    var initials = username.split('@')[0].split('.').map(function(name) {
      return name[0].toUpperCase();
    });

    $('.btn-user-initial').text(initials.join(''));
  }

  $(document).on('click', '#edit-button', function () {
    $.ajax({
      method: 'GET',
      url: window.location.pathname,
      data: {
        edit: 1, // purge and keep out of cache temporarily
      }
    }) // no callback on this.
  })

</script>
