<div class="branding">
  <h2 class="branding-heading">
    <% const shouldLink = locals.context !== 'home' %>
    <% if (shouldLink) { %><a id="branding-heading-link" href="/"><% } %>
      <span class="visually-hidden"><%- stringTemplate('branding.org') %></span>
      <img src=<%- stringTemplate('branding.icon') %> class="logo" alt=<%- stringTemplate('branding.org') %>>
    <% if (shouldLink) { %></a><% } %>
  </h2>
  <h3 class="branding-label">
    <% if (shouldLink) { %><a class="content-link" href="/"><% } %>
      <%- stringTemplate('branding.name') %>
    <% if (shouldLink) { %></a><% } %>
  </h3>
</div>
