<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Search Results</title>
    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- styles -->
    <script src="https://***REMOVED***" async></script>
    <link href="/assets/css/style.css" rel="stylesheet">
  </head>
  <body>
    <!-- <h1 class="visually-hidden">Default template</h1> -->
    <div class="g-body">
      <div class="g-left-panel">
      </div>

      <% if(locals.results) { %>
        <h1>Results for <%= locals.q %></h1>
      <% } else { %>
        <h1>Search</h1>
      <% } %>

      <form method="GET">
        <input type="text" name="q" value="<%= locals.q %>" /> <button>Search</button>
      </form>

      <% if(locals.results) { %>
        <% locals.results.forEach((res) => { %>
        <div class="search-result">
          <a href="<%= res.webViewLink %>"><%= res.name %></a>
        </div>
        <% }) %>
      <% } %>
    </div>

  </body>
</html>
